<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Tpl.Maui"
             xmlns:core="clr-namespace:Tpl.Core;assembly=Tpl.Core"
             x:Class="Tpl.Maui.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}" 
             >

   
    
    <BlazorWebView  HostPage="wwwroot/index.html" Margin="0">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type core:App}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView> 
  

</ContentPage>